use "cube";
use "camera";
use "utils/projectionMatrix";

let t = 0;

let camera = Camera([0, 0, 0], [0, 1, 0], [0, 0, 1], 0.3, 0.05);
camera.regKeyMove();

let light = [-1, -1, 1];
let cube = Cube(camera, light);

// Main render loop
while true {
    t = t + 0.01;
    render([
        [cube.pipeline, cube.vertices]
    ]);
    cube.update(t);
}