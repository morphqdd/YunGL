use "utils/math";

export fun viewMatrix(eye, center, up) {
    let f = normalize(subtract(center, eye));
    let s = normalize(cross(f, up));
    let u = cross(s, f);

    return [
      [ s[0],  u[0], -f[0], 0.0 ],
      [ s[1],  u[1], -f[1], 0.0 ],
      [ s[2],  u[2], -f[2], 0.0 ],
      [
        -dot(s, eye),
        -dot(u, eye),
         dot(f, eye),
        1.0
      ]
    ];
}